<div class = "col-md-8 offset-md-1">
 <h2>商品詳細</h2>
 <div>
 <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg', fallback: 'no_image.png' %>
 </div>
 
  <table class="table">
   <tr><th>商品名</th><td><%= @item.item_name %></td></tr>
   <tr><th>商品説明</th><td><%= @item.description %></td></tr>
   <tr><th>ジャンル</th><td><%= @item.genre.genre_name %></td></tr>
   <tr>
    <th><p>税込価格</p><p>(税抜価格)</p></th>
    <td><p><%= @item.add_tax_price_without_tax.to_s(:dalimited) %>(<%= @item.price_without_tax %>)円</p></td>
   </tr>
   <tr><th>販売ステータス</th><td><%= @item.sales_status ? '販売中' : '販売停止中' %></td></tr>
  </table>

<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-lg btn-success" %>
</div>