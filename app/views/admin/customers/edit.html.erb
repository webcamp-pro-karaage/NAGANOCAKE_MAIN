<div class = "col-md-8 offset-md-1">
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>errors prohibited this obj from being saved:
     <ul><%= @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     </ul>
    <% end %>
  <% end %>

  <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
  <%= form_with model: @customer, url:"/admin/customers/#{@customer.id}", local:true do |f| %>
    <div class="form-group">
      <h4>会員ID</h4>
      <%= @customer.id %>

      <h4>氏名</h4>
      <%= f.text_field :last_name, autofocus:true %>
      <%= f.text_field :first_name, autofocus:true %>

      <h4>フリガナ</h4>
      <%= f.text_field :last_name_kana, autofocus:true %>
      <%= f.text_field :first_name_kana, autofocus:true %>

      <h4>郵便番号</h4>
      <%= f.text_field :post_code, autofocus:true %>

      <h4>住所</h4>
      <%= f.text_field :address, autofocus:true %>

      <h4>電話番号</h4>
      <%= f.telephone_field :phone_number, autofocus:true %>

      <h4>メールアドレス</h4>
      <%= f.email_field :email, autofocus:true %>

      <h4>会員ステータス</h4>
      <%= f.label :is_deleted, '有効' %>
　　　<%= f.radio_button :is_deleted, 'false' %>
      <%= f.label :is_deleted, '退会' %>
   　　<%= f.radio_button :is_deleted, 'true' %>
    </div>
    <%= f.submit '変更を保存', class: "btn btn-success" %>
  <% end %>

</div>