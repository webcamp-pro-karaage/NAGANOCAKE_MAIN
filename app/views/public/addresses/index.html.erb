<!--サクセスメッセージ-->
<% if flash[:notice] %>
 <p id="notice">
<%= flash[:notice] %>
 </p>
<% end %>

<!--エラーメッセージ-->
<div class = "errors">
<% if @address.errors.any? %>
 <%= @address.errors.count %>件のエラーが発生しました<br>
  <% @address.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
<% end %>
</div>


<div class="container">
 <div class="row">
  <div class="col-md-8">

     <h3>配送先登録/一覧</h3>
      <%= form_with model: @address, url: addresses_path, method: :post, local:true do |f| %>
       <div class = "form-group">
        <h4>郵便番号(ハイフンなし)</h4>
         <%= f.text_field :post_code, class: 'form-control' %>
        <h4>住所</h4>
         <%= f.text_field :address, class: 'form-control' %>
        <h4>宛名</h4>
         <%= f.text_field :name, class: 'form-control' %>
       </div>
       <%= f.submit '新規登録' ,class: "btn btn-lg btn-success" %>
      <% end %>


   <!--配送先一覧-->

     <table class="table table-hover table-bordered">
      <thred>
       <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="2"></th>
      </thred>
      <tbody>
       <% @addresses.each do |address| %>
        <tr>
         <td><%= address.post_code %></td>
         <td><%= address.address %></td>
         <td><%= address.name %></td>
         <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-lg btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, 'data confirm' => "本当に削除しますか？", class: "btn btn-lg btn-success" %>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>
 </div>
</div>