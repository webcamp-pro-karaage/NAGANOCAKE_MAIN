<div class = "col-md-8 offset-md-1">
	<h2>注文履歴一覧</h2>
	 <table class="table-bordered">
	  <tr>
     <th>注文日</th>
     <th>配送先</th>
     <th>注文商品</th>
     <th>支払金額</th>
     <th>ステータス</th>
     <th>注文詳細</th>
    </tr>
      <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
     <td><%= order.address %></td>
     <td>
      <% order.ordered_items.each do |ordered_item| %>
         <%= ordered_item.item.item_name %>
      <% end %>
     </td>
     <td><%= order.total_payment %></td>
     <td><%= order.order_status %></td>
     <td><%= link_to "注文詳細", order_path(order.id), class: "btn btn-primary" %></td>
    </tr>
      <% end %>
	</table>
</div>
