<div class = "col-md-8 offset-md-1">
  <div class="row">
      <h2 class="border-bottom px-3 pb-1">商品一覧</h2>
      <h6>全<%= @items.count %>件</h6>
  </div>

  <div class="d-flex align-content-between flex-wrap">
    <% @items.each do |item| %>
      <div>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: '120x120', format: 'jpeg', fallback: 'no_image.png' %><br>
        <% end %>
        <div>
          <span class="border-bottom px-3"><%= item.item_name %></span>
        </div>
        <div>
          <span>￥<%= item.price_without_tax %></span>
        </div>
      </div>
    <% end %>
    <div class="d-flex align-items-end">
    <%= paginate @items %>
    </div>
  </div>
</div>